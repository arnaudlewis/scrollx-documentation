{
  "name": "scrollx-documentation",
  "version": "1.0.0",
  "private": false,
  "scripts": {
    "start": "npm run build-sass; npm run build-js; node dist/app.js",
    "watch": "npm run watch-sass | npm run watch-js;",
    "build-js": "babel ./app/ -d dist",
    "watch-js": "babel-watch app/app.js -w ./app/",
    "sass" : "node-sass --include-path scss assets/stylesheets/main.sass public/stylesheets/compiled/scrollx.css",
    "build-sass": "npm run pre-build; npm run sass",
    "watch-sass": "npm run pre-build; nodemon -e sass -x \"npm run sass\"",
    "pre-build": "mkdir -p public/stylesheets/compiled",
    "serve": "node dist/app.js"
  },
  "dependencies": {
    "alw-prismic.io": "^4.0.0",
    "body-parser": "~1.0.0",
    "debug": "~0.7.4",
    "errorhandler": "~1.1.1",
    "express": "~4.13.4",
    "method-override": "~2.1.1",
    "morgan": "~1.0.0",
    "pug": "^2.0.0-alpha6",
    "serve-favicon": "~2.3.0"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/arnaudlewis/scrollx-documentation.git"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.10.4",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-watch": "^2.0.2",
    "browserify": "^13.0.1",
    "node-sass": "^3.8.0",
    "nodemon": "^1.10.2"
  }
}
